{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* JSX 설정 */
    "jsx": "react-jsx",
    "jsxImportSource": "@/jsx", // 사용자 정의 createElement 함수 경로

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    /* Base URL 및 Paths 설정 */
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },

    /* Types 설정 */
    "types": ["node"]
  },
  "include": ["src", "src/jsx/jsx.d.ts"]
}
